<class name = "zs_suffices"  script = "zs_suffices">
    SI scaling functions, see http://en.wikipedia.org/wiki/Metric_prefix
    <atomic name = "Ki" value = "1024">
        Multiply by 2^10
    </atomic>
    <atomic name = "Mi" value = "1024 * 1024">
        Multiply by 2^20
    </atomic>
    <atomic name = "Gi" value = "1024 * 1024 * 1024">
        Multiply by 2^30
    </atomic>
    <atomic name = "Ti" value = "1024 * 1024 * 1024 * 1024">
        Multiply by 2^40
    </atomic>
    <atomic name = "Pi" value = "1024 * 1024 * 1024 * 1024 * 1024">
        Multiply by 2^50
    </atomic>
    <atomic name = "Ei" value = "1024 * 1024 * 1024 * 1024 * 1024 * 1024">
        Multiply by 2^60
    </atomic>
    <atomic name = "da" value = "10">
        Multiply by 10
    </atomic>
    <atomic name = "h" value = "100">
        Multiply by 100
    </atomic>
    <atomic name = "k" value = "1000">
        Multiply by 1000
    </atomic>
    <atomic name = "M" value = "1000000">
        Multiply by 1E6
    </atomic>
    <atomic name = "G" value = "1E9">
        Multiply by 1E9
    </atomic>
    <atomic name = "T" value = "1E12">
        Multiply by 1E12
    </atomic>
    <atomic name = "P" value = "1E15">
        Multiply by 1E15
    </atomic>
    <atomic name = "E" value = "1E18">
        Multiply by 1E18
    </atomic>
    <atomic name = "Z" value = "1E21">
        Multiply by 1E21
    </atomic>
    <atomic name = "Y" value = "1E24">
        Multiply by 1E24
    </atomic>
