<class name = "zs_units_misc"  script = "zs_scaling">
    Miscellaneous scaling functions
    <atomic name = "minutes" value = "60LL">
        <alias name = "minute" />
        seconds per minute
    </atomic>
    <atomic name = "hours" value = "60LL * 60LL">
        <alias name = "hour" />
        seconds per hour
    </atomic>
    <atomic name = "days" value = "60LL * 60LL * 24LL">
        <alias name = "day" />
        seconds per day
    </atomic>
    <atomic name = "weeks" value = "60LL * 60LL * 24LL * 7LL">
        <alias name = "week" />
        seconds per week
    </atomic>
    <atomic name = "years" value = "60LL * 60LL * 24LL * 365LL">
        <alias name = "year" />
        seconds per non-leap year
    </atomic>
    <atomic name = "msecs" value = "0.001" type = "real">
        <alias name = "msec" />
        seconds per 1/1000
    </atomic>
    <atomic name = "/minute" value = "60LL" scale = "down">
        minutes per seconds
    </atomic>
    <atomic name = "/hour" value = "60LL * 60LL" scale = "down">
        hours per second
    </atomic>
    <atomic name = "/day" value = "60LL * 60LL * 24LL" scale = "down">
        days per second
    </atomic>
    <atomic name = "/week" value = "60LL * 60LL * 24LL * 7LL" scale = "down">
        weeks per second
    </atomic>
    <atomic name = "/year" value = "60LL * 60LL * 24LL * 365LL" scale = "down">
        non-leap years per second
    </atomic>
    <atomic name = "/msec" value = "0.001" type = "real" scale = "down">
        msecs per seconds
    </atomic>
</class>
