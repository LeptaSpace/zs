<class name = "zs_parser" script = "fsm_c">

<state name = "expecting token" inherit = "defaults">
    <event name = "letter" next = "reading function">
        <action name = "start new token" />
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "hyphen" next = "reading number">
        <action name = "start new token" />
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "plus" next = "reading number">
        <action name = "start new token" />
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "period" next = "reading number">
        <action name = "start new token" />
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "digit" next = "reading number">
        <action name = "start new token" />
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "open quote" next = "reading string">
        <action name = "start new token" />
        <action name = "read next character" />
    </event>
    <event name = "white space">
        <action name = "read next character" />
    </event>
    <event name = "punctuation">
        <action name = "have punctuation" />
        <action name = "read next character" />
    </event>
    <event name = "finished">
    </event>
</state>

<state name = "reading function" inherit = "defaults">
    <event name = "letter">
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "digit">
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "hyphen">
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "period">
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "slash">
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "underscore">
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "white space" next = "expecting token">
        <action name = "have function" />
        <action name = "read next character" />
    </event>
    <event name = "finished" next = "expecting token">
        <action name = "have function" />
    </event>
</state>

<state name = "reading number" inherit = "defaults">
    <event name = "digit">
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "letter">
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "hyphen">
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "plus">
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "slash">
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "period">
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "comma">
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "colon">
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "asterisk">
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "caret">
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "percent">
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "open paren" next = "expecting token">
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "close paren" next = "expecting token">
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
    <event name = "white space" next = "expecting token">
        <action name = "have number candidate" />
        <action name = "read next character" />
    </event>
    <event name = "finished" next = "expecting token">
        <action name = "have number candidate" />
    </event>
</state>

<state name = "reading string">
    <event name = "close quote" next = "expecting token">
        <action name = "have string" />
        <action name = "read next character" />
    </event>
    <event name = "finished">
        <action name = "store newline character" />
    </event>
    <event name = "*">
        <action name = "store the character" />
        <action name = "read next character" />
    </event>
</state>

<state name = "defaults">
    <event name = "letter" next = "expecting token">
        <action name = "report unexpected input" />
    </event>
    <event name = "digit" next = "expecting token">
        <action name = "report unexpected input" />
    </event>
    <event name = "hyphen" next = "expecting token">
        <action name = "report unexpected input" />
    </event>
    <event name = "plus" next = "expecting token">
        <action name = "report unexpected input" />
    </event>
    <event name = "slash" next = "expecting token">
        <action name = "report unexpected input" />
    </event>
    <event name = "underscore" next = "expecting token">
        <action name = "report unexpected input" />
    </event>
    <event name = "period" next = "expecting token">
        <action name = "report unexpected input" />
    </event>
    <event name = "comma" next = "expecting token">
        <action name = "report unexpected input" />
    </event>
    <event name = "colon" next = "expecting token">
        <action name = "report unexpected input" />
    </event>
    <event name = "asterisk" next = "expecting token">
        <action name = "report unexpected input" />
    </event>
    <event name = "caret" next = "expecting token">
        <action name = "report unexpected input" />
    </event>
    <event name = "percent" next = "expecting token">
        <action name = "report unexpected input" />
    </event>
    <event name = "open quote" next = "expecting token">
        <action name = "report unexpected input" />
    </event>
    <event name = "close quote" next = "expecting token">
        <action name = "report unexpected input" />
    </event>
    <event name = "open paren" next = "expecting token">
        <action name = "report unexpected input" />
    </event>
    <event name = "close paren" next = "expecting token">
        <action name = "report unexpected input" />
    </event>
    <event name = "white space" next = "expecting token">
        <action name = "report unexpected input" />
    </event>
    <event name = "other" next = "expecting token">
        <action name = "report unexpected input" />
    </event>
</state>

</class>
